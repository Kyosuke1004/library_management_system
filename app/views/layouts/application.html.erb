<!DOCTYPE html>
<html>
  <head>
    <title>LibraryManagementSystem</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <nav class="navbar custom-navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to '図書管理システム', root_path, class: "navbar-item" %>
      </div>
      <div class="navbar-menu">
        <div class="navbar-start">
          <%= link_to '図書一覧', books_path, class: "navbar-item" %>
        </div>
        <div class="navbar-end">
          <% if user_signed_in? %>
            <div class="navbar-item">
              こんにちは、<%= current_user.email %>さん
            </div>
            <div class="navbar-item">
              <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: "button is-light" %>
            </div>
          <% else %>
            <div class="navbar-item">
              <%= link_to 'ログイン', new_user_session_path, class: "button is-light" %>
            </div>
            <div class="navbar-item">
              <%= link_to '会員登録', new_user_registration_path, class: "button is-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
    <div class="container mt-4">
      <% if notice %>
        <div class="notification is-info"><%= notice %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
